        <script><![CDATA[(function executeRule(current, previous /*null when async*/ ) {

 
  if (!current.u_data_inicio.nil() && !current.u_data_fim.nil()) {
    var start = new GlideDateTime(current.u_data_inicio);
    var end = new GlideDateTime(current.u_data_fim);

    if (end.before(start)) {
      gs.addErrorMessage('A data de fim deve ser maior ou igual à data de início.');
      current.setAbortAction(true);
      return;
    }

  
    var msPerDay = 24 * 60 * 60 * 1000;
    var days = Math.floor((end.getNumericValue() - start.getNumericValue()) / msPerDay) + 1;
    current.u_dias = days;


    var retorno = new GlideDateTime(end);
    retorno.addDaysUTC(1);
    current.u_retorno_previsto = retorno;
  }

  if (current.operation() === 'insert' && current.u_status.nil())
    current.u_status = 'solicitado';

})(current, previous);
]]></script>
