        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

  function hoursToDurationString(h) {
    var total = Math.round(parseFloat(h || 0) * 3600);
    if (isNaN(total) || total < 0) total = 0;
    var days = Math.floor(total / 86400);
    var rem  = total % 86400;
    var hh   = Math.floor(rem / 3600);
    var mm   = Math.floor((rem % 3600) / 60);
    var ss   = rem % 60;
    function pad(n){ return (n < 10 ? '0' : '') + n; }
    return days + ' ' + pad(hh) + ':' + pad(mm) + ':' + pad(ss);
  }

  if (gs.nil(current.u_quantidade_horas) && !gs.nil(current.u_curso)) {
    var c = new GlideRecord('x_snc_mock_skillup_curso');
    if (c.get(current.u_curso)) {
      current.u_quantidade_horas = hoursToDurationString(c.u_duracao);
    }
  }

  if (gs.nil(current.u_data_emissao)) {
    current.u_data_emissao = gs.nowDate();
  }
})(current, previous);
]]></script>
