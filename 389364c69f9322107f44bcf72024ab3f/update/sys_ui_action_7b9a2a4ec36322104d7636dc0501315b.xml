        <script><![CDATA[function markP1Confirm() {
  var v = ("" + g_form.getValue('priority')).toLowerCase();
  if (v.indexOf("1") === 0 || v.indexOf("critical") > -1 || v.indexOf("crítica") > -1 || v.indexOf("critica") > -1) {
    alert("Esse bug já está como P1 (Critical).");
    return;
  }

  if (confirm('Definir prioridade como "1 - Critical" e salvar?')) {
    g_form.setValue('priority', '1 - Critical');
    g_form.save(); 
  }
}

